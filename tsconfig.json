{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "baseUrl": ".",
        "types": [
            "@types/d3",
            "@types/three",
            "@cesium/engine",
            "@cesium/widgets",
            "@types/js-cookie",
            "@types/nprogress",
            "@vitejs/plugin-vue",
            "element-plus/global",
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/components/Three/city/index.js",
    ],
    "exclude": [
        "element-plus/dist/locale/**"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}